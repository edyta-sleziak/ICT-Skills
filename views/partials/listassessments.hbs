<section class="ui blue segment">
  <h3 class="ui left aligned header">
    List of assessments:
  </h3>
    <table class="ui center aligned small table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Weight</th>
        <th>Chest</th>
        <th>Thigh</th>
        <th>Upper arm</th>
        <th>Waist</th>
        <th>Hips</th>
        <th>Trend</th>
        <th>Comment</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each assessments}}
        <tr>
          <td>
            {{date}}
          </td>
          <td>
            {{weight}}
          </td>
          <td>
            {{chest}}
          </td>
          <td>
            {{thigh}}
          </td>
          <td>
            {{upperArm}}
          </td>
          <td>
            {{waist}}
          </td>
          <td>
            {{hips}}
          </td>
          <td>
            <i class="large {{trend}} chart line icon"></i>
          </td>
          <td>
            {{comment}}
          </td>
          <td>
            <a href="/member/{{../member.id}}/deleteassessment/{{id}}" class="ui icon button">
              <i class="icon trash"></i>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>