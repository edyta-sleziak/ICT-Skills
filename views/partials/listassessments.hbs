<section class="ui segment">
  <h3 class="ui left aligned header">
    List of assessments:
  </h3>
    <table class="ui table">
    <thead>
      <tr>
        <th>Weight</th>
        <th>Chest</th>
        <th>Thigh</th>
        <th>Upper arm</th>
        <th>Waist</th>
        <th>Hips</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each member.assessments}}
        <tr>
          <td>
            {{weight}}
          </td>
          <td>
            {{chest}}
          </td>
          <td>
            {{thigh}}
          </td>
          <td>
            {{upperArm}}
          </td>
          <td>
            {{waist}}
          </td>
          <td>
            {{hips}}
          </td>
          <td>
            <a href="/member/{{../member.id}}/deleteassessment/{{id}}" class="ui icon button">
              <i class="icon trash"></i>
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>