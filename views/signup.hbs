{{> welcomemenu id="signup"}}

<section class="ui grid">
  <section class="ui six wide column">
    <form class="ui stacked segment form" action="/register" method="POST">
      <h3 class="ui header">Register</h3>
      <div class="field">
        <label>Name</label>
        <input placeholder="Name" type="text"  name="name">
      </div>
      <div class="field">
        <label>Email</label>
        <input placeholder="Email" type="text" name="email">
      </div>
      <div class="field">
        <label>Password</label>
        <input type="password" name="password">
      </div>
      <div class="field">
        <label>Address</label>
        <input placeholder="Address" type="text" name="address">
      </div>
      <div class="field">
         <label>Gender</label>
          <select>
            <option value="Unspecified">Please select</option>
            <option value="M">M</option>
            <option value="F">F</option>
          </select>
      </div>
      <div class="field">
        <label>Height</label>
        <input placeholder="1.85" type="text"  name="height">
      </div>
      <div class="field">
        <label>Starting weight</label>
        <input placeholder="80" type="text" name="startingweight">
      </div>
      <button class="ui blue submit button">Submit</button>
    </form>
  </section>
  <section class="ui seven wide column">
    <img class="ui centered large image" src="">
  </section>
</section>